

<section class="login-container">
  <div class="login-box">
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <%- messages() %>


    <!-- Login Form -->
    <form action="/account/login" method="POST">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required required value="<%= locals.account_email %>">

      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password"  required pattern="(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&#^]).{12,}" title="Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character." data-trail="password">
      <span id="pswd8tn">Show password</span>

      <p class="password-hint">Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character.</p>

      <button type="submit">LOGIN</button>
    </form>

    <!-- Registration Link -->
    <p>No account? <a href="/account/register">Sign-up</a></p>
  </div>
</section>
<script>
    const pswdBtn = document.querySelector("#pswd8tn"); // Correct ID selection
  
    pswdBtn.addEventListener("click", function() { // Correct function syntax
      const pswdInput = document.getElementById("account_password");
      const type = pswdInput.getAttribute("type");
  
      if (type === "password") {
        pswdInput.setAttribute("type", "text");
        pswdBtn.innerHTML = "Hide Password";
      } else {
        pswdInput.setAttribute("type", "password");
        pswdBtn.innerHTML = "Show Password";
      }
    });
  </script>

