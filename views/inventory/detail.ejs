


  <h1><%= vehicle.make || "Unknown" %> <%= vehicle.model || "Unknown" %></h1>
  <div class="vehicle-container">
    <img src="<%= vehicle.image || '/images/default.jpg' %>" alt="<%= vehicle.make || "Unknown" %> <%= vehicle.model || "Unknown" %>">
    <div class="vehicle-info">
      <p><strong>Price:</strong> $<%= vehicle.price ? vehicle.price.toLocaleString() : "N/A" %></p>
      <p><strong>Year:</strong> <%= vehicle.year || "Unknown" %></p>
      <p><strong>Mileage:</strong> <%= vehicle.miles ? vehicle.miles.toLocaleString() : "N/A" %> miles</p>
      <p><%= vehicle.description || "No description available." %></p>
    </div>
  </div>

