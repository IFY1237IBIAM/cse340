<link rel="stylesheet" href="/css/inventory.css">

<div class="add-classification-container">
    <h1>Add New Classification</h1>
  
    <% if (messages.error) { %>
      <p class="flash-message-error"><%= messages.error %></p>
    <% } %>
  
    <% if (messages.success) { %>
      <p class="flash-message-success"><%= messages.success %></p>
    <% } %>
  
    <form class="add-classification-form" id="addClassificationForm" action="/inv/add-classification" method="POST">
      <label for="classification_name">Classification Name:</label>
      <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$" title="No spaces or special characters allowed">
      <p class="character-hint">No spaces or special characters allowed.</p>
      
      <button type="submit">Add Classification</button>
    </form>
  </div>
  